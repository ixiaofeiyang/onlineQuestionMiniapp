<view class="page">
    <view class="wrap">
        <view>
            <text class="title">考试题目</text>
            <text class="car">{{exam.name}}</text>
        </view>
        <view>
            <text class="title">考题数量</text>
            <text class="car">单选10个，多选10个</text>
        </view>
        <view>
            <text class="title">考试时间</text>
            <text class="car">20分钟</text>
        </view>
        <view>
            <text class="title">合格标准</text>
            <text class="car">满分100分, 每题2分 </text>
        </view>
        <view>
            <text class="title">出题规则</text>
            <text class="car">按规定比例随机抽取</text>
        </view>
        <view class="button">
            <view bindtap="examGoNew" data-ind="0">全真模拟考试</view>
        </view>
    </view>
</view>